<div class="container">
    <div class="row">
        <div class="col-md-4 offset-2">
            <div class="profile-left">
                <%= attachment_image_tag(@user,:profile_image, fallback: "/assets/no-image.png", size:"150x150") %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="profile-right">
            </div>
        </div>
    </div>
</div>










<div class="container">
	<h3>会員詳細画面</h3>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-1">
            <table class="table table-bordered">
		        <tbody>
		        <tr>
		          	<th style="background-color: #333333; color:white;">顧客ID</th>
		          	  <td><%= @user.id %>
		          	  		<%if @user.valid_status == "active"%>
		          	  		<span class="label label-info"><%= @user.valid_status_i18n + "会員" %></span>
		          	  		<% else %>
		          	  		<span class="label label-danger"><%= @user.valid_status_i18n + "会員" %></span>
		          	  		<% end %>
		          	  </td>
		          	</tr>
		            <tr>
		              <th width="20%" style="background-color: #333333; color:white;">氏名</th>
		              <td width="80%"><%= @user.name %></td>
		            </tr>
		            <tr>
		              <th style="background-color: #333333; color:white;">生年月日</th>
		              <td><%= @user.birth_date %></td>
		            </tr>
		            <tr>
		              <th style="background-color: #333333; color:white;">性別</th>
		              <td><%= @user.gender_status %></td>
		            </tr>
		            <tr>
		              <th style="background-color: #333333; color:white;">都道府県</th>
		              <td><%= @user.prefecture %></td>
		            </tr>
		            <tr>
		              <th style="background-color: #333333; color:white;">自己紹介</th>
		              <td><%= @user.introduction %></td>
		            </tr>
		            <tr>
		            </tr>
		          </tbody>
		        </table>
		     		 <span>
	       			   <%= link_to " 編集する", edit_user_path, class:"col-3 btn btn-primary glyphicon glyphicon-wrench" %>
	       			 </span>
        </div>
	</div>
</div>