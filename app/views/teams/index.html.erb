<div class="container">

	<h3>チーム一覧</h3>
	<div class="row">
		<div class="col-md-10 offset-1">
				<div class="search_form">
				<%= form_tag(teams_path, method: "get") do %>
				<%= label_tag :prefecture, "都道府県" %>
					<%= select_tag :prefecture, options_for_select(Team.prefectures
					# , :selected => params[:prefecture] 選択を保持する記述
					), include_blank:"全国", class:"col-md-3 form-control" %>
					<%= label_tag :frequency, "活動頻度" %>
					<%= select_tag :frequency, options_for_select(Team.frequencies
					# , :selected => params[:frequency]　選択を保持する記述
					), include_blank:"-- 選択してください --",
					class:"col-md-3 form-control" %>
					<%= label_tag :genre, "競技" %>
					<br><%= select_tag :genre_id, options_from_collection_for_select(Genre.all, :id, :name
					# , params[:genre_id]　選択を保持する記述
					),include_blank:"-- 選択してください --",class:"col-md-3 form-control"%>
					<%= label_tag :day_of_week, "活動曜日" %>
					<div class="field">
                        <br>
						<%= check_box_tag :day_of_week, "日曜", nil  %>日曜
                        <%= check_box_tag :day_of_week, "月曜", nil %>月曜
                        <%= check_box_tag :day_of_week, "火曜", nil %>火曜
                        <%= check_box_tag :day_of_week, "水曜", nil %>水曜
                        <%= check_box_tag :day_of_week, "木曜", nil %>木曜
                        <%= check_box_tag :day_of_week, "金曜", nil %>金曜
                        <%= check_box_tag :day_of_week, "土曜", nil %>土曜
                        <%= check_box_tag :day_of_week, "未定", nil %>未定
                    </div>
					<br><%= submit_tag "検索", class:"btn btn-success btn-sm" %>
				<% end %>
				</div>
						<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>チーム名</th>
							<th>都道府県</th>
							<th>活動頻度</th>
							<th>活動曜日</th>
						</tr>
					</thead>


					<tbody>
						<% @teams.each do |team| %>
						<tr>
							<td><%= link_to team_path(team), class: "team_#{team.id}"  do %>
							<%= attachment_image_tag(team,:team_image, fallback: "/assets/no-image.png", size:"60x60") %></td>
							<% end %>
							<td><%= team.name%></td>
							<td><%= team.prefecture %></td>
							<td><%= team.frequency %></td>
							<td><%= team.day_of_week %></td>
							<td><%= team.genre.name%></td>
						</tr>
						<% end %>
					</tbody>
				</table>
		</div>
	</div>
</div>